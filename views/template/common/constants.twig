{% block const %}    
    {# Constants #}
    <div class="tab-pane" id="nav-const-form" role="tabpanel" aria-labelledby="naf-const-tab">    
      {# <ul class="nav nav-tabs" id="eva-nav-tabs">
      </ul> #}
      <h5 class="title" id="constFormLabel">Constants</h5>             
      <hr>
      <div class="btn-toolbar" role="toolbar" aria-label="toolbar group">
        <div class="btn-group btn-group-sm" role="group">          
          <button type="button" class="btn btn-primary d-flex gap-2 align-items-center eva-edit" onclick="constEditModal()">
            <i class="fa fa-edit"></i>
            <span>{{ button_edit }}</span>
          </button>   
          <button type="button" class="btn btn-primary d-flex gap-2 align-items-center" onclick="showConstTable()">
            <a class="dropdown-item d-flex gap-2 align-items-center"><i class="fa fa-refresh"></i></a>
          </button>           
        </div>
        {# <div class="btn-group btn-group-sm" role="group">
          <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></button>
          <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">                                        
          </ul>
        </div> #}
      </div>           
      <div class="eva-table" id="eva-const-form"></div>       
    </div>  
{# </div>  #}

{# Modal Const #}  
<div class="modal fade" id="constModal" tabindex="-1" data-bs-backdrop="static" aria-labelledby="constModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="constModalLabel">Edit constant:</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="form" id="create-const-form"> 
          <label for="input-const-name">Name:</label>
          <div class="input-group input-group-sm">
            <input type="text" placeholder="" id="input-const-name" class="form-control" disabled/>
          </div>  
          <label for="input-const-value">Value:</label>
          <div class="input-group input-group-sm">
            <input id="input-const-value"/>
            <button class="btn btn-outline-secondary" id="input-const-value_btn" type="button" onclick="elementBtn(id)" hidden>...</button>
          </div> 
        </form>
      </div>
      <div class="modal-footer">        
        <button type="submit" class="btn btn-primary" onclick="constSave()">{{ button_save }}&{{button_close}}</button>        
      </div>
    </div>
  </div>
</div> 

{% endblock %}