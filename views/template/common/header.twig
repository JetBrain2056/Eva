<header id="header" class="navbar navbar-dark" vertical-align="middle">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ home }}" >{{ name }}</a>        
    {% if logged %}        
      <nav>
        <ul class="nav btn-group" align="right">
          <li class="nav-item btn">
            <a class="nav-link" aria-current="page" href="#">Конфигурация</a>
          </li>    
          <li class="nav-item btn">
            <a class="nav-link" aria-current="page" href="#" onclick="user_table()">Пользователи</a>
          </li> 
          <li class="nav-item btn">
            <a class="nav-link" aria-current="page" href="#"><img src="{{ image }}" alt="" width="30" height="30" id="user-profile" class="img-circle" />{{ username }}</i></a>                        
          </li>      
          <li class="nav-item dropdown btn">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true"></a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="#">Справка</a></li>
              <li><a class="dropdown-item" href="#">Информация</a></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal">О программе...</a>      
              </li>
            </ul>
          </li>          
          <li class="nav-item btn">
            <a class="nav-link" aria-current="page" href="#"><i class="fa fa-cog"></i></a>                       
          </li>    
          <li class="nav-item btn">
            <a class="nav-link" aria-current="page" href="{{ logout }}"><i class="fa fa-sign-out"></i></a>  
          </li>  
        </ul>
      </nav>  
    {% endif %}    
  </div>       
</header>
<!-- Modal  -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{ about_program }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
      </div>
      <div class="modal-body">
        Developer EVA
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ button_close }}</button>        
      </div>
    </div>
  </div>
</div>