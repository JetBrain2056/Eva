{% block ref %} 
{# Reference #}
<div class="tab-pane fade" id="nav-ref-form" role="tabpanel" aria-labelledby="naf-ref-tab">    
  <ul class="nav nav-tabs" id="eva-nav-tabs">
  </ul>
  <h5 class="title" id="refFormLabel">Reference*</h5>     
  <div class="btn-toolbar" role="toolbar" aria-label="toolbar group">    
    <div class="btn-group btn-group-sm" role="group">
      <button type="button" class="btn btn-primary d-flex gap-2 align-items-center eva-add">
          <i class="fa fa-plus-square"></i>
          <span>{{ button_add }}</span>
      </button>
      <button type="button" class="btn btn-primary d-flex gap-2 align-items-center eva-edit">
          <i class="fa fa-edit"></i>
          <span>{{ button_edit }}</span>
      </button>
      <button type="button" class="btn btn-primary d-flex gap-2 align-items-center eva-copy">
          <i class="fa fa-clone" aria-hidden="true"></i>
          <span>{{ button_copy }}</span>
      </button>
      <button type="button" class="btn btn-primary d-flex gap-2 align-items-center eva-del">
          <i class="fa fa-minus-square"></i>
          <span>{{ button_delete }}</span>
      </button>
      <div class="btn-group btn-group-sm" role="group">
        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></button>
        <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">           
            <li><a class="dropdown-item">{{ button_etc}}</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item">...</a></li>
        </ul>
      </div>
    </div>
  </div>           
  <div class="eva-table" id="eva-ref-form"></div>       
</div>  

{# Modal Ref #}  
<div class="modal fade" id="refModal" tabindex="-1" data-bs-backdrop="static" aria-labelledby="refModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="refModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="form" id="create-ref-form"> 
          {# Dynamic form #}
        </form>
      </div>
      <div class="modal-footer">
        {# <button type="submit" class="btn btn-primary" onclick="refSave()"><i class="fa fa-floppy-o"></i></button> #}
        <button type="submit" class="btn btn-primary" onclick="refCreate()">{{ button_save }}&{{button_close}}</button>        
      </div>
    </div>
  </div>
</div> 
{% endblock %}